<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <item>
        <shape>
            <!-- set the shadow color here -->

            <!--<gradient-->
                <!--android:startColor="#8ccc"-->
                <!--android:endColor="#0000"-->
                <!--android:type="linear"-->
                <!--android:angle="45"> &lt;!&ndash; Change this value to have the correct shadow angle, must be multiple from 45 &ndash;&gt;-->
            <!--</gradient>-->

            <stroke
                android:width="3dp"
                android:color="#1000" />

            <!-- setting the thickness of shadow (positive value will give shadow on that side) -->
            <corners
                android:topRightRadius="2dp"
                android:bottomLeftRadius="2dp"
                android:topLeftRadius="5dp"
                android:bottomRightRadius="5dp"/>

            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="0dp"
                android:top="0dp" />

        </shape>
    </item>

    <!-- Background -->

    <item>
        <shape>
            <solid android:color="@color/b_green" />
            <corners android:radius="2dp"/>
            <stroke
                android:width="1dp"
                android:color="#2000" />

        </shape>
    </item>
</layer-list>